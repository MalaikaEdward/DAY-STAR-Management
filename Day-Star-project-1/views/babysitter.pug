doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Daycare Sitter Registration
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      )
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header
              h3.text-center Daycare Sitter Registration
              form(
        method="POST" 
        action="/Reg"
        )
            .card-body
              form
                .mb-3
                  label.form-label(for="fullName") Full Name
                  input#fullName.form-control( 
                    placeholder="fullName" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="email") Email address
                  input#email.form-control(
                    placeholder="emailAddress" 
                    type="email"
                    )
                .mb-3
                  label.form-label(for="phone") Phone Number
                  input#phone.form-control(
                    placeholder="phoneNumber" 
                    type="tel"
                    )
                .mb-3
                  label.form-label(for="address") Address
                  input#address.form-control( 
                    placeholder="address" 
                    type="text"
                    )
                .mb-3
                  label.form-label(for="experience") Experience
                  textarea#experience.form-control(
                    placeholder="experience" 
                    rows="3"
                    )
                .mb-3
                  label.form-label(for="availability") Availability
                  input#availability.form-control( 
                    placeholder="availability" 
                    type="text"
                    )
                .text-center
                  button.btn.btn-primary(type="submit") Submit