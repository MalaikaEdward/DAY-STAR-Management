doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Admin Dashboard
    // Bootstrap CSS
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      )
    // Custom CSS
    link(
      href="/admindashboard/form.css" 
      rel="stylesheet"
      )
  body
    .container.mt-5
      h2.mb-4 ADMIN DASHBOARD
      // Card Container
      .d-flex.justify-content-center.flex-wrap
        // Adjusted to flex to make cards align horizontally
        // Card 1: Register Child
        .card.mb-4
          img.card-img-top(
            alt="..." 
            src="/images/images/fals.jpg"
            )
          .card-body
            h5.card-title Register Child
            p.card-text Register a new child into the system.
            a.btn.btn-primary(href="/Babyregister/baby.html") Register Child
        // Card 2: Babysitters
        .card.mb-4
          img.card-img-top(
            alt="..." 
            src="/images/images/DH.jpg"
            )
          .card-body
            h5.card-title Babysitters
            p.card-text Access and manage babysitters.
            a.btn.btn-primary(href="/Babysitters/sitterlogin.html") Babysitters
        // Card 3: Daily Attendances
        .card.mb-4
          img.card-img-top(
            alt="..." 
            src="/images/images/fxx.jpg"
            )
          .card-body
            h5.card-title Daily Attendances
            p.card-text Manage daily attendances.
            a.btn.btn-primary(href="/dailyattendences/daily.html") Daily Attendances
        // Logout Button
        .card.mb-4
          button#logoutBtn.btn.btn-danger Logout
    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js")
    // Custom JS
    script(src="/general register/form.js")