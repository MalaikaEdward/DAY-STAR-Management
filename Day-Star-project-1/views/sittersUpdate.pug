doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Daycare Sitter Registration
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      .row.justify-content-center
        .col-md-6
          .card
            .card-header
              h3.text-center Daycare Sitter Registration
            .card-body
              form(method="POST" action='/sittersUpdate?id='+sitter._id)
                .mb-3
                  label.form-label(for="fullName") Full Name
                  input#fullName.form-control(placeholder="Full Name", name="fullName", type="text", value=sitter.fullName)

                .mb-3
                  label.form-label(for="gender") Gender
                  select#gender.form-control(name="gender")
                    option(value="", selected=sitter.gender === "") Select Gender
                    option(value="male", selected=sitter.gender === "male") Male
                    option(value="female", selected=sitter.gender === "female") Female

                .mb-3
                  label.form-label(for="email") Email address
                  input#email.form-control(placeholder="Email address", name="email", type="email", value=sitter.email)

                .mb-3
                  label.form-label(for="phone") Phone Number
                  input#phone.form-control(placeholder="Phone Number", name="phonenumber", type="tel", value=sitter.phoneNumber)

                .mb-3
                  label.form-label(for="address") Address
                  input#address.form-control(placeholder="Address", name="currentAddress", type="text", value=sitter.currentAddress)
                
                .mb-3
                  label.form-label(for="availability") Availability
                  input#availability.form-control(placeholder="Availability", name="Availability", type="text", value=sitter.Availability)
                
                .mb-3
                  label.form-label(for="levelOfEducation") Level Of Education
                  input#levelOfEducation.form-control(placeholder="Level of Education", name="levelOfEducation", type="text", value=sitter.levelOfEducation)
                
                .mb-3
                  label.form-label(for="experience") Experience
                  input#experience.form-control(placeholder="Experience", name="experience", type="text", value=sitter.experience)
                
                .mb-3.text-center
                  button.btn.btn-primary(type="submit") Update
    footer.footer
      .container.text-center
        p Daystar Management 2024